<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate android:pivotX="120%" android:pivotY="20%" android:fromDegrees="45">
            <shape android:shape="rectangle">
                <gradient
                        android:type="radial"
                        android:startColor="#00000000"
                        android:centerColor="#03A9F4"
                        android:endColor="#0003A9F4"
                        android:gradientRadius="52dp"
                        android:centerX="100%"
                        android:centerY="100%"
                        />
                <size android:height="30dp" android:width="30dp"/>
            </shape>
        </rotate>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#00000000"/>
            <size android:height="100dp" android:width="100dp"/>
            <padding  android:top="40dp" android:bottom="40dp" android:right="40dp" android:left="40dp"/>
        </shape>
    </item>


    <item>
        <shape android:shape="oval">
<!--            <size android:height="16dp" android:width="16dp"/>-->
            <stroke
                    android:width="1dp"
                    android:color="#03A9F4"/>
            <padding  android:top="1dp" android:bottom="1dp" android:right="1dp" android:left="1dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
<!--            <size android:height="16dp" android:width="16dp"/>-->
            <!--            <padding android:top="30dp" android:bottom="30dp" android:right="30dp" android:left="30dp"/>-->
            <stroke
                    android:width="2dp"
                    android:color="#FFFFFF"/>
            <padding  android:top="2dp" android:bottom="2dp" android:right="2dp" android:left="2dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
<!--            <size android:height="16dp" android:width="16dp"/>-->
            <solid android:color="#03A9F4"/>
            <padding  android:top="2dp" android:bottom="2dp" android:right="2dp" android:left="2dp"/>
        </shape>
    </item>

</layer-list>