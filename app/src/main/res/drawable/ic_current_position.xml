<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate android:fromDegrees="50" android:pivotX="7%" android:pivotY="34%">
            <layer-list>
                <item>
                    <rotate android:pivotX="120%" android:pivotY="20%" android:fromDegrees="45">
                        <shape android:shape="rectangle">
                            <gradient
                                    android:type="radial"
                                    android:startColor="@color/blueLightTransparent"
                                    android:centerColor="@color/blueLight"
                                    android:endColor="@color/blueLightTransparent"
                                    android:gradientRadius="84dp"
                                    android:centerX="100%"
                                    android:centerY="100%"
                                    />
                            <size android:height="60dp" android:width="60dp"/>
                        </shape>
                    </rotate>
                </item>

                <item>
                    <shape android:shape="rectangle">
                        <stroke android:width="1dp" android:color="#00000000"/>
                        <size android:height="100dp" android:width="100dp"/>
                        <padding  android:top="31dp" android:bottom="31dp" android:right="31dp" android:left="31dp"/>
                    </shape>
                </item>


                <item>
                    <shape android:shape="oval">
                        <stroke
                                android:width="1dp"
                                android:color="@color/blueLight"/>
                        <padding  android:top="1dp" android:bottom="1dp" android:right="1dp" android:left="1dp"/>
                    </shape>
                </item>

                <item>
                    <shape android:shape="oval">
                        <stroke
                                android:width="2dp"
                                android:color="@color/white"/>
                        <padding  android:top="2dp" android:bottom="2dp" android:right="2dp" android:left="2dp"/>
                    </shape>
                </item>

                <item>
                    <shape android:shape="oval">
                        <solid android:color="@color/blueLight"/>
                        <padding  android:top="2dp" android:bottom="2dp" android:right="2dp" android:left="2dp"/>
                    </shape>
                </item>

            </layer-list>
        </rotate>

    </item>
</layer-list>